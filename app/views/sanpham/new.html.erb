<h1 style="margin-left:50px; margin-top: 50px;">Thêm Sản Phẩm</h1>
<div style="width: 600px;margin-left:400px; margin-top: 200px;">
<%= form_with url: '/sanpham/create' do |form| %>
  <div class="form-group">
    <label for="formGroupExampleInput" style="margin-right: 50px;">Tên Sản Phẩm</label>
    <%= form.text_field :tensp, placeholder: "Nhập tên sản phẩm", html: {class: "form-control"}  %>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput" style="margin-right: 125px;">Giá</label>
    <%= form.text_field :price, placeholder: "Nhập giá", html: {class: "form-control"}  %>
  </div>
  <div class="form-group" style="display:none;">
    <label for="formGroupExampleInput" style="margin-right: 50px;">Số Lượng</label>
    <%= form.text_field :soluong, placeholder: "Nhập số lượng", html: {class: "form-control"} ,value: 1 %>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput" style="margin-right: 90px;">Ghi Chú</label>
    <%= form.text_field :ghichu, placeholder: "Ghi chú", html: {class: "form-control"}  %>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput" style="margin-right: 50px;">Image</label>
     <%= form.file_field :avatar, placeholder: "Nổi Bật", html: {class: "form-control"} %>
  </div>
  <div class="form-group" style="margin-left: 150px;">
  <%= form.submit "ADD"%>
  </div>
  <%end%>
</div>


